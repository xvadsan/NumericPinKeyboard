<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/greyLight">

    <View
        android:id="@+id/view_one"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/item_number_auth"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_numeric"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view_two"
        app:layout_constraintEnd_toStartOf="@+id/view_two"
        app:layout_constraintTop_toTopOf="@+id/view_two" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numericKeyboardOne"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_one"
        app:layout_constraintEnd_toEndOf="@+id/view_one"
        app:layout_constraintStart_toStartOf="@+id/view_one"
        app:layout_constraintTop_toTopOf="@+id/view_one" />

    <View
        android:id="@+id/view_two"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/item_number_auth"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_numeric"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view_five"
        app:layout_constraintEnd_toEndOf="@+id/view_five"
        app:layout_constraintStart_toStartOf="@+id/view_five" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numericKeyboardTwo"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_two"
        app:layout_constraintEnd_toEndOf="@+id/view_two"
        app:layout_constraintStart_toStartOf="@+id/view_two"
        app:layout_constraintTop_toTopOf="@+id/view_two" />

    <View
        android:id="@+id/view_three"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:background="@drawable/item_number_auth"
        android:focusable="true"
        android:foreground="@drawable/ripple_numeric"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view_two"
        app:layout_constraintStart_toEndOf="@+id/view_two"
        app:layout_constraintTop_toTopOf="@+id/view_two" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
